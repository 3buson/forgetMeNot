{
    "manifest_version": 3,
    "name": "Jirator",
    "description": "Nagging you about code and spec reviews since 2022.",
    "version": "1.0",
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": "assets/chicken_kiev.png"
    },
    "options_page": "options/options.html",
    "background": {
        "service_worker": "background/background.js",
        "type": "module"
    },
    "permissions": [
        "storage",
        "alarms"
    ],
    "host_permissions": [
        "https://celtra.atlassian.net/"
    ]
}
